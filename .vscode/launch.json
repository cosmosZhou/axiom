    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",            
            "justMyCode": false,
            "env": { "PYTHONPATH": "${workspaceFolder}" },
        },
        {
            "name": "Python: run.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",            
            "justMyCode": false,
            "env": { "PYTHONPATH": "${workspaceFolder}" },
            "args": [
                "--parallel",
                "--debug",
                "--processes", "4"
            ]
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        }
    ]
}